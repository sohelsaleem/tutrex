{% extends 'AdminBundle::layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Edit reseller{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='?uglifycss'
        'assets/vendor/jquery-ui/jquery-ui.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn learnium-info-btn">Save</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascript %}
{{ parent() }}

<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% javascripts filter='?uglifyjs2'
'assets/vendor/jquery-ui/jquery-ui.js'
'@AdminBundle/Resources/public/js/editReseller.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}