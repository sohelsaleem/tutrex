{% trans_default_domain 'FOSUserBundle' %}

<form class="login-form" action="{{ path("fos_user_security_check") }}" method="post" novalidate>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
    {% endif %}

    <div class="form-group username-block">
        <label for="username">Email</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required">
    </div>

    <div class="form-group password-block">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required">
    </div>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
    <label for="remember_me" class="blue-check-label">{{ 'security.login.remember_me'|trans }}</label>
    <a class="forgot-password-link pull-right" href="#">Forgot password?</a>

    <div class="login-registration-block">
        <p>Not a member yet? <a class="login-register-button" href="#">Register!</a></p>
    </div>

    <div class="modal-buttons text-center">
        <input class="login-button btn learnium-info-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
    </div>
</form>
