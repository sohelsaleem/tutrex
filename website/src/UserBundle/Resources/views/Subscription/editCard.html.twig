<form id="payment-form" class="update-card-form">
    <div class="alert alert-danger payment-errors error-message danger-message">

    </div>

    {% if app.user.last4CardCode != null %}
        <div class="edit-card-message alert alert-info info-message">This credit card info will replace the current one</div>
    {% endif %}

    <input id="user-id" type="hidden" value="{{ app.user.id }}">
    <div class="form-group row">
        <div class="col-md-12 col-xs-12">
            <label for="creditCardInput" class="col-form-label">Credit card</label>
            <input class="form-control" id="creditCardInput" type="text" maxlength="20" data-stripe="number"  value="" placeholder="XXXX XXXX XXXX XXXX">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3 col-xs-4">
            <label for="creditCardExpMonth" class="col-form-label">Exp. month</label>
            <input type="text" class="form-control" placeholder="MM" id="creditCardExpMonth" maxlength="2" data-stripe="exp_month">
        </div>
        <div class="col-md-3 col-xs-4">
            <label for="creditCardExpYear" class="col-form-label">Exp. year</label>
            <input id="creditCardExpYear" class="form-control" placeholder="YYYY" type="text" maxlength="4" data-stripe="exp_year">
        </div>
        <div class="col-xs-0 col-md-3">
        </div>

        <div class="col-md-3 col-xs-4">
            <label for="creditCardCVC" class="col-form-label">CVC</label>
            <input type="text" class="form-control" maxlength="4" data-stripe="cvc" id="creditCardCVC" placeholder="CVC">
        </div>
    </div>

    <div class="modal-buttons text-center">
        <button class="btn learnium-default-btn" data-dismiss="modal">Cancel</button>
        &nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;
        <input class="save-card-button submit btn learnium-info-btn" type="submit" value="Save">
    </div>
</form>