{% form_theme editLogoForm 'bootstrap_3_layout.html.twig' %}

<div class="logo-form profile-form-block">
    {{ form_start(editLogoForm, {attr:{id:'edit-logo-form'}}) }}
    <div class="form-group {{ editLogoForm.classroomLogo.vars.errors|length > 0 ? 'has-error' : '' }}">
        <label class="profile-label">
            Logo
        </label>

        <div class="logo-container">
            {% if user.classroomLogo %}
                <img src="{{ asset('uploads/logo/' ~ userLogo) }}" class="logo"/>
            {% else %}
                {% if logo %}
                    <img src="{{ logo }}" class="logo"/>
                {% else %}
                    {% image '@UserBundle/Resources/public/images/logo-default.jpg' %}
                        <img src="{{ asset_url }}" class="logo">
                    {% endimage %}
                {% endif %}
            {% endif %}
            <div class="preloader sk-fading-circle hidden">
                <div class="sk-circle1 sk-circle"></div>
                <div class="sk-circle2 sk-circle"></div>
                <div class="sk-circle3 sk-circle"></div>
                <div class="sk-circle4 sk-circle"></div>
                <div class="sk-circle5 sk-circle"></div>
                <div class="sk-circle6 sk-circle"></div>
                <div class="sk-circle7 sk-circle"></div>
                <div class="sk-circle8 sk-circle"></div>
                <div class="sk-circle9 sk-circle"></div>
                <div class="sk-circle10 sk-circle"></div>
                <div class="sk-circle11 sk-circle"></div>
                <div class="sk-circle12 sk-circle"></div>
            </div>
        </div>
        <div class="field-errors {% if editLogoForm.classroomLogo.vars.errors|length == 0 %}hidden{% endif %}">
            <span class="help-block">
                <ul class="list-unstyled">
                    <li>
                        <span class="glyphicon glyphicon-exclamation-sign"></span> Please, upload image in supported format: .jpg, .png
                    </li>
                </ul>
            </span>
        </div>
        <div class="logo-actions">
            <div class="save-logo-button"
                 data-href="{{ path('user_edit_logo_ajax', {id: user.id}) }}">Upload
            </div>
            {% if user.classroomLogo %}
                <div class="delete-logo-button"
                     data-href="{{ path('user_delete_logo_ajax', {id: user.id}) }}"></div>
            {% endif %}
        </div>
        <div class="edit-field-block">
            {{ form_widget(editLogoForm.classroomLogo) }}
        </div>
        <div class="logo-note">
            Supported formats: .jpg, .png
        </div>
    </div>
    {{ form_end(editLogoForm) }}
</div>