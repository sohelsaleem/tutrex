{% form_theme editSubdomainForm 'bootstrap_3_layout.html.twig' %}

<div class="subdomain-form profile-form-block">
    {{ form_start(editSubdomainForm) }}
    <div class="form-group {{ editSubdomainForm.subdomain.vars.errors|length > 0 ? 'has-error' : '' }}">
        <label class="profile-label">
            Subdomain
        </label>

        <div class="view-field-block">
            <span class="profile-field">{{ user.subdomain ?: '---' }}</span>
            <span class="edit-subdomain-button edit-button glyphicon glyphicon-pencil"
                  data-href="{{ path('user_get_edit_subdomain_form_ajax', {id: user.id}) }}"></span>
        </div>
        <div class="edit-field-block">
            {{ form_widget(editSubdomainForm.subdomain) }}
            <div class="field-actions">
                <span class="save-subdomain-button save-button glyphicon learning-ok"
                      data-href="{{ path('user_edit_subdomain_ajax', {id: user.id}) }}"></span>
                <span class="cancel-button glyphicon learning-remove"></span>
            </div>
            {{ form_errors(editSubdomainForm.subdomain) }}
        </div>
    </div>
    {{ form_end(editSubdomainForm) }}
</div>